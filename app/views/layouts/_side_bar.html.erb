<div class="col-md-2 heigh position-sticky text-light pt-4 p-0" style="
        top: 0;
        height: 100vh;
        background-color: #213346;">
    <% if user_signed_in? %>
        <div class="row mb-3 px-4">
            <div class="col-4 p-0">
                <% if current_user.profile_image.attached? %>
                    <%= image_tag current_user.profile_image, class: "img-fluid" %>
                <% else %>
                    <%= image_pack_tag 'profile_placeholder.jpg', class: "img-fluid"%>
                <% end %>
            </div>
            <div class="col-8 align-self-center font-weight-bold"><%= current_user.username %></div>
        </div>
        <div class="row">
            <div class="col-6 text-center text-light font-weight-bold">
            Followers <%= current_user.followers.count %>
            </div>
            <div class="col-6 text-center text-light font-weight-bold">
            Following <%= current_user.following.count %>
            </div>
        </div>
        <ul class="list-group mt-4">
            <li class="list-group-item border-0 <%= current_page?(root_path) ? 'bg-info' : "bg-transparent"%>"><%= link_to "Home", root_path ,class: "text-white"%></li>
            <li class="list-group-item border-0 <%= current_page?(current_user) ? 'bg-info' : "bg-transparent"%>"><%= link_to "Profile", current_user ,class: "text-white"%></li>
            <li class="list-group-item border-0 <%= current_page?(users_path) ? 'bg-info' : "bg-transparent"%>"><%= link_to "Memo creators", users_path ,class: "text-white"%></li>
        </ul>
    <% else %>
        <ul class="list-group">
            <li class="list-group-item border-0 <%= current_page?(new_user_registration_path) ? 'bg-info' : "bg-transparent"%>"><%= link_to "sing up", new_user_registration_path, class: "text-white" %></li>
            <li class="list-group-item border-0 <%= current_page?(new_user_session_path) ? 'bg-info' : "bg-transparent"%>"><%= link_to "log in", new_user_session_path, class: "text-white" %></li>
        </ul>
    <% end %>
</div>
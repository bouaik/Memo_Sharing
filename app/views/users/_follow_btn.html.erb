<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= button_to  friendships_path(user_id: user.id), remote: true, method: :delete, class: "btn btn-danger", id: "unfollow-btn" do %> 
      <i class="fas fa-user-times"></i>
    <% end %>
  <% else %>
    <%= button_to  friendships_path(user_id: user.id), remote: true, class: "btn btn-success", id: "follow-btn" do %> 
      <i class="fas fa-user-plus"></i>
    <% end %>
  <% end %>
<% end %>